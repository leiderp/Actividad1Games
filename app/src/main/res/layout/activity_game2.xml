            android:layout_height="63dp"
            android:fontFamily="serif-monospace"
            android:text="@string/Level"
            android:textAlignment="center"
            android:textColor="#041057"
            android:textSize="36sp"
            android:textStyle="bold" />
    </LinearLayout>

